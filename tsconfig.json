{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@hotcrm/core": ["packages/core/src"],
      "@hotcrm/metadata": ["packages/metadata/src"],
      "@hotcrm/hooks": ["packages/hooks/src"],
      "@hotcrm/actions": ["packages/actions/src"],
      "@hotcrm/ui": ["packages/ui/src"],
      "@hotcrm/server": ["packages/server/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/metadata" },
    { "path": "./packages/hooks" },
    { "path": "./packages/actions" },
    { "path": "./packages/ui" },
    { "path": "./packages/server" }
  ],
  "files": [],
  "include": [],
  "exclude": ["node_modules", "dist"]
}

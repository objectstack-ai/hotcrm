{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@hotcrm/core": ["packages/core/src"],
      "@hotcrm/crm": ["packages/crm/src"],
      "@hotcrm/support": ["packages/support/src"],
      "@hotcrm/products": ["packages/products/src"],
      "@hotcrm/finance": ["packages/finance/src"],
      "@hotcrm/ui": ["packages/ui/src"],
      "@hotcrm/server": ["packages/server/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/crm" },
    { "path": "./packages/support" },
    { "path": "./packages/products" },
    { "path": "./packages/finance" },
    { "path": "./packages/ui" },
    { "path": "./packages/server" }
  ],
  "files": [],
  "include": [],
  "exclude": ["node_modules", "dist"]
}
